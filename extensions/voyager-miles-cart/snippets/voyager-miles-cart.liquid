{% comment %}
  SAA Voyager Miles Cart Snippet
  Include this in your cart template to add Voyager loyalty points integration
  
  Usage: {% render 'voyager-miles-cart' %}
  
  Or with custom settings:
  {% render 'voyager-miles-cart', 
     api_url: 'https://your-api.com',
     points_rate: '0.01',
     min_points: 1000,
     max_points: 50000 %}
{% endcomment %}

{% assign voyager_api_url = api_url | default: 'https://saa-voyager-app-prod.tofmail2022.workers.dev/api/voyager' %}
{% assign points_rate = points_rate | default: '0.01' %}
{% assign min_points = min_points | default: 1000 %}
{% assign max_points = max_points | default: 50000 %}

<div class="voyager-miles-cart-block" 
     data-voyager-api-url="{{ voyager_api_url }}"
     data-points-rate="{{ points_rate }}"
     data-min-points="{{ min_points }}"
     data-max-points="{{ max_points }}">
  
  <div class="voyager-miles-section">
    <!-- Background Pattern -->
    <div class="voyager-bg-pattern"></div>
    
    <div class="voyager-login-form" id="voyager-login-form">
      <div class="voyager-login-header">
        <div class="voyager-logo">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="white" stroke-width="2" stroke-linejoin="round"/>
            <path d="M2 17L12 22L22 17" stroke="white" stroke-width="2" stroke-linejoin="round"/>
            <path d="M2 12L12 17L22 12" stroke="white" stroke-width="2" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>SAA Voyager Miles</h3>
        <p>Log in to use your loyalty points</p>
        <div class="voyager-benefits">
          <span class="benefit-item">Earn points on flights</span>
          <span class="benefit-item">Redeem for discounts</span>
          <span class="benefit-item">Exclusive member benefits</span>
        </div>
      </div>
      
      <div class="voyager-input-group">
        <label for="voyager-username">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Voyager Number
        </label>
        <input type="text" id="voyager-username" name="username" placeholder="Enter your Voyager number" required>
      </div>
      
      <div class="voyager-input-group">
        <label for="voyager-password">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 11H5C3.89543 11 3 11.8954 3 13V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V13C21 11.8954 20.1046 11 19 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M7 11V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          PIN
        </label>
        <input type="password" id="voyager-password" name="password" placeholder="Enter your PIN" required>
      </div>
      
      <button type="submit" class="voyager-login-btn" id="voyager-login-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M10 17L15 12L10 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M15 12H3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Login & Check Points
      </button>
      
      <div id="voyager-status" class="voyager-status"></div>
    </div>
    
    <div class="voyager-points-display" id="voyager-points-display" style="display: none;">
      <div class="voyager-points-header">
        <div class="points-title">
          <div class="points-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
            </svg>
          </div>
          <h4>ðŸŽ¯ Your Voyager Points</h4>
        </div>
        <button id="voyager-logout" class="voyager-logout-btn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 17L21 12L16 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Logout
        </button>
      </div>
      
      <div class="voyager-points-info">
        <div class="points-balance">
          <span class="points-label">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
            </svg>
            Available Points
          </span>
          <span class="points-value" id="points-value">Loading...</span>
        </div>
        
        <div class="points-value-zar">
          <span class="zar-label">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7 12H17M7 12L9 9M7 12L9 15M17 12L15 9M17 12L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
            </svg>
            Value in ZAR
          </span>
          <span class="zar-value" id="zar-value">Calculating...</span>
        </div>
      </div>
      
      <div class="points-usage">
        <label for="points-to-use">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
          Points to use
        </label>
        <input type="number" id="points-to-use" min="{{ min_points }}" max="{{ max_points }}" step="1000" placeholder="Enter points to redeem">
        <button id="apply-points" class="apply-points-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          Apply Points
        </button>
      </div>
      
      <div id="points-status" class="points-status"></div>
    </div>
  </div>
</div>

{% comment %} Include the CSS and JS files {% endcomment %}
{{ 'voyager-miles-cart.css' | asset_url | stylesheet_tag }}
<script src="{{ 'voyager-miles-cart.js' | asset_url }}" defer></script>
