{
  "name": "saa-voyager-shopify-app",
  "version": "1.0.0",
  "description": "SAA Voyager points integration for Shopify",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:shopify\"",
    "dev:server": "nodemon server/index.js",
    "dev:shopify": "shopify app dev",
    "build": "npm run build:app && shopify app build",
    "build:app": "cd app && npm install && npm run build",
    "deploy": "npm run build && npm run deploy:cloudflare:prod && shopify app deploy",
    "deploy:full": "npm run build && npm run deploy:cloudflare:prod && shopify app deploy",
    "deploy:cloudflare": "wrangler deploy",
    "deploy:cloudflare:staging": "wrangler deploy --env staging",
    "deploy:cloudflare:prod": "wrangler deploy --env production",
    "deploy:pages": "cd app && npm run build && wrangler pages deploy dist --project-name=saa-voyager-app-frontend",
    "deploy:frontend": "npm run build:app && wrangler deploy --config wrangler-frontend.toml --assets ./app/dist",
    "deploy:all": "npm run build:app && npm run deploy:frontend && npm run deploy:cloudflare:prod && shopify app deploy",
    "cloudflare:dev": "wrangler dev",
    "cloudflare:secret": "wrangler secret put",
    "test": "jest",
    "test:api": "node test/test-api.js",
    "test:connectivity": "node test/test-connectivity.js",
    "test:soap": "node test/test-soap-debug.js",
    "test:robust": "node test/test-soap-robust.js",
    "test:strong": "node test/test-strong-soap.js",
    "test:manual": "node test/test-manual-soap.js",
    "test:debug": "node test/test-response-debug.js",
    "test:comprehensive": "node test/test-comprehensive-soap.js",
    "test:minimal": "node test/test-minimal-soap.js",
    "test:surname": "node test/test-surname-auth.js",
    "test:diagnostic": "node test/test-service-diagnostic.js",
    "test:corrected": "node test/test-corrected-soap.js",
    "test:wssecurity": "node test/test-ws-security-variations.js",
    "test:mock": "node test/test-mock-mode.js",
    "test:scenarios": "node test/test-mock-scenarios.js",
    "test:voyager": "node test-voyager-auth.js",
    "test:uat": "node test-uat-soap.js"
  },
  "dependencies": {
    "@shopify/shopify_function": "~2.0.0",
    "@shopify/shopify-app-express": "^2.0.0",
    "@shopify/shopify-app-session-storage-memory": "^2.0.0",
    "@shopify/ui-extensions": "2025.7.1",
    "@shopify/ui-extensions-react": "2025.7.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hono": "^3.12.0",
    "node-fetch": "^2.7.0",
    "preact": "^10.27.2",
    "react": "^18.3.1",
    "react-reconciler": "0.29.0",
    "soap": "^1.3.0",
    "strong-soap": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@shopify/theme": "^3.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "shopify",
    "saa-voyager",
    "loyalty",
    "points"
  ],
  "author": "Your Company",
  "license": "MIT",
  "overrides": {
    "@types/react": "17.0.30"
  }
}
